
<div class="container">
    <div class="row">
        <div class="d-flex flex-column mb-3">
            <div class="p-2">
                <h4>Products & Quantities</h4>
            </div>
            <div class="p-2">
                <div class="col-sm-12 col-lg-6 offset-lg-3 my-5" style="width:100%;margin:-10px;">
                    <RadzenChart  SeriesClick=@OnSeriesClick>
                        <RadzenPieSeries Data="@revenue" Title="Revenue" CategoryProperty="Quarter" ValueProperty="Revenue">
                            <RadzenSeriesDataLabels Visible="true" />
                            <div style="margin-top:20px">
                                <RadzenLegend Position="LegendPosition.Bottom" />
                            </div>         
                        </RadzenPieSeries>
                    </RadzenChart>
                </div>
            </div>   
        </div>      
    </div>
</div>

@code {
   
    bool showDataLabels = false;

    void OnSeriesClick(SeriesClickEventArgs args)
    {
       
    }

    class DataItem
    {
        public string? Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
        new DataItem
        {
            Quarter = "Flexi board",
            Revenue = 30000
        },
        new DataItem
        {
            Quarter = "Lamination Film",
            Revenue = 40000
        },
        new DataItem
        {
            Quarter = "SP Jumbo Film",
            Revenue = 50000
        },
        new DataItem
        {
            Quarter = "DIY",
            Revenue = 80000
        },
    };
}