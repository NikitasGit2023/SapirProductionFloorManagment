@using  SapirProductionFloorManagment.Shared

<nav class="navbar bg-body-tertiary">
    <form class="container-fluid justify-content-start">
        @for(int i=0; i<Tables.Count(); i++)
        {
            <button @onclick="()=> SwitchToTable(Tables[i].Name)" 
            class="btn btn-sm btn-outline-secondary" type="button" style="margin-left:5px;">@Tables[i].Name</button>    
        }
    </form>
</nav>


@code 
{
    [Parameter]
    public List<TableBase> Tables { get; set;}

    protected override Task OnInitializedAsync()
    {

        return base.OnInitializedAsync();
    }

    private void SwitchToTable(string target)
    {
        Tables.ForEach(table =>
        {
            if (table.Name != target)
            {
                table.IsVisible = false;
            }
            else
                table.IsVisible = true;
        });

    }


}
