@using Radzen
@using Radzen.Blazor
@using SapirProductionFloorManagment.Client.Shared

@inject DialogService DialogService

<RadzenTemplateForm TItem="LineWorkPlan" Data="@model" Submit=@OnSubmit>
    <RadzenStack Gap="1rem">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap">
            <RadzenLabel Text="Title" Style="width: 6rem;" />
            <RadzenTextBox @bind-Value="@model.Comments" Name="Text" Style="width: 12rem;" />
            <RadzenRequiredValidator Component="Comments" Text="Title is required" />
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap">
            <RadzenLabel Text="Start" Style="width: 6rem;" />
            <RadzenDatePicker @bind-Value="@model.StartWork" Name="Start" ShowTime="true" Style="width: 12rem;" />
            <RadzenRequiredValidator Component="StartWork" Text="Start is required" />
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Wrap="FlexWrap.Wrap">
            <RadzenLabel Text="End" Style="width: 6rem;" />
            <RadzenDatePicker Name="End" @bind-Value="@model.EndWork" ShowTime="true" Style="width: 12rem;" />
            <RadzenRequiredValidator Component="EndWork" Text="End is required" />
        </RadzenStack>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
            <RadzenButton ButtonType="ButtonType.Submit" Text="Save" />
        </RadzenStack>
    </RadzenStack>
</RadzenTemplateForm>

@code {

    [Parameter]
    public LineWorkPlan? WorkPlan { get; set; }

    LineWorkPlan model = new LineWorkPlan();

    protected override void OnParametersSet()
    {
        model = WorkPlan;
    }

    void OnSubmit(LineWorkPlan model)
    {
        DialogService.Close(model);
    }
}